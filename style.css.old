* {
  -webkit-font-smoothing: grayscale;
  -moz-osx-font-smoothing: antialiased;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

:root {
  --color-base-blue-300: #387e96;
  --color-base-blue-500: #065e7c;
  --color-base-white: #ffffff;

  font-size: 62.5%;
}

body {
  font-family: 'Mulish', sans-serif;
  font-size: 1.6rem;
  font-weight: 400;
}

.app {
  height: 100vh;
}

.menu {
  background-color: var(--color-base-blue-500);

  display: flex;
  align-items: center;
  gap: 2.55rem;
  justify-content: center;

  padding: 1.6rem 2.8rem;

  width: 100vw;
}

.input-wrapper > label {
  height: 1px;
  width: 1px;

  overflow: hidden;
  position: absolute;
}

#search {
  background-color: var(--color-base-blue-300);

  border: none;
  border-radius: 4px;

  height: 4rem;
  width: min(24.1rem, 100%);

  padding: 1.2rem 1.4rem;
}

#search::placeholder {
  color: var(--color-base-white);
  font-family: 'Mulish', sans-serif;
  font-size: 1rem;
  font-weight: 600;
}

#banner {
  margin-bottom: 3.1rem;

  width: 100%;
}

.subject,
.description,
.related-articles {
  margin-inline: 2.4rem;
}

.subject {
  margin-bottom: 3.1rem;
}

h1,
h2,
h3 {
  font-size: 2.4rem;
  font-weight: 700;
}

h1,
h2,
h3,
.description > p {
  line-height: 160%;
}

h1 {
  margin-bottom: 0.8rem;
}

.buttons {
  display: flex;
  gap: 1.2rem;
}

.description {
  margin-bottom: 3.4rem;
}

.description > p + p {
  margin-top: 2.4rem;
}

.related-articles {
  display: flex;
  flex-direction: column;
  gap: 3.2rem;

  margin-bottom: 3.9rem;
}

.article {
  display: flex;
  gap: 1.6rem;
}

h3 {
  font-size: 1.8rem;

  margin-bottom: 1.525rem;
}

footer {
  background-color: var(--color-base-blue-300);

  color: var(--color-base-white);
  font-size: 1.6rem;
  font-weight: 600;
  text-align: center;

  padding: 2.65rem 1.6rem;
}

@media (min-width: 375px) {
  #search::placeholder {
    font-size: 1.6rem;
  }
}
